{
    "options": {
        // "quiet": true,
        "overwrite": false,
        "parents": true,
        "dest": "./packages/copy/test/tmp"
        // cwd is project root, since the command is executed from the root.
    },
    "paths": [
        "lerna.json",
        ["packages/core/cli/**/*", "!packages/core/cli/**/in*.js"],
        { "src": "./package.json" },
        { "src": "./lerna.json", "dest": "./packages/copy/test/different-dest" },
        { "src": "./package.json", "dest": "../copy/test/tmp/different-cwd", "cwd": "./packages/core" }
    ]
}