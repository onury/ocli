{
    "src": "packages/repack/test/data/package.json",
    "dest": "packages/repack/test/tmp2",
    "options": {
        "install": true,
        "indent": 3,
        "private": false,
        "name": "repack-config-test",
        "description": "some desc",
        "removeDevDeps": true,
        "remove": ["scripts, license", "jest.testEnvironment"],
